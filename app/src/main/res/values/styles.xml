<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorBackground">@color/colorWhite</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorButton">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorBackground">@color/colorBackgroundDarkMode</item>
        <item name="colorTextPrimary">@color/colorTextPrimaryDark</item>
        <item name="colorTextSecondary">@color/colorTextSecondaryDark</item>
        <item name="colorButton">@color/colorPrimary</item>
    </style>
</resources>